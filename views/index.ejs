<!DOCTYPE html>
<html>

<head>
    <%- include('head') %>
</head>

<body>
    <h1>Eren Demir</h1>


    <form class="validate-form" method="POST" action="/">
        <h2 class="title-screen">Başlık Ekle</h2>
        <div class="form-group">
            <input type="text" name="title" placeholder="Başlık" class="form-control">
        </div>
        <% if (RegisterMessage !='undefined' ? RegisterMessage : '' ) {%>
            <div class="alert alert-<%= typeStatus %>" role="alert">
                <p>
                    <%= RegisterMessage %>
                </p>
            </div>
            <% } %>
                <div class="form-group">
                    <button class="btn-login btn">Add</button>
                </div>
    </form>
    <hr>
    <h1>Toplam Todo Sayısı: <% if(getAllTodos !=null){%>
            <%= getAllTodos.length%>
                <% } %>
    </h1>
    <% if(getAllTodos !=null){%>

        <% for (let i=0; i < getAllTodos.length; i++) { %>
            <h2>
                <%=i+1%> .Başlık: <%= getAllTodos[i].get('title')%>

                ( ObjectId: <%= getAllTodos[i].id%>)
            </h2>
            <form class="validate-form" method="POST" action="/<%= getAllTodos[i].id %> ">
                <button class="bi-trash"></button>
            </form>
            <%} %>
                <%} %>

</body>

</html>

